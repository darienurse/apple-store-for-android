<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appleappstorestop25.app" >
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ItunesAppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ItunesItemListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItunesItemDetailActivity"
            android:label="@string/title_itunesitem_detail"
            android:theme="@style/AppTheme.TranslucentActionBar"
            android:parentActivityName=".ItunesItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItunesItemListActivity" />
        </activity>
    </application>

</manifest>
